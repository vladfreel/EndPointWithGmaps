= include_gon
%head
  %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS']}&callback=initMap"}
    :cdata
%table
  %thead
    %tr.table_head_color
      %th RequestNumber
      %th SequenceNumber
      %th RequestType
      %th PrimaryServiceAreaCode
      %th AdditionalServiceAreaCodes
      %th DigsiteInfo
      %th ResponseDueDateTime
  %tbody
    %tr
      %td= @ticket.request_number
      %td= @ticket.sequence_number
      %td= @ticket.request_type
      %td= @ticket.primary_service_area_code
      %td= @ticket.additional_service_area_codes
      %td= @ticket.dig_site_info
      %td= @ticket.response_due_date_time
%br
#map{:style => "width: 800px; height: 400px;"}
%h1
  Excavator data:
%br
%table
%thead
  %tr.table_head_color
    %th CompanyName
    %th Street
    %th City
    %th State
    %th Zip
    %th Type
    %th CrewOnSite
%tbody
  %tr
    - if @ticket.excavator
      %td= @ticket.excavator.company_name
      %td= @ticket.excavator.street
      %td= @ticket.excavator.city
      %td= @ticket.excavator.state
      %td= @ticket.excavator.zip
      %td= @ticket.excavator.type
      %td= @ticket.excavator.crew_on_site





